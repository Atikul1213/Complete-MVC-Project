<h2>Inventory Edit Page</h2>
@model InventoryModel



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-3">
                    Edit Inventory
                </h2>
            </div>
        </div>

    </div>



    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">


                @* <div asp-validation-summary="ModelOnly"> </div>*@

                <div class="form-floating py-2 col-12">
                    <select asp-for="productId" asp-items="Model.productList" class="form-select border-0 shadow">
                        <option disabled selected>
                            --Select Product--
                        </option>
                    </select>
                    <label asp-for="productId" class="ms-2"></label>
                    <span asp-validation-for="productId" class="text-danger"></span>
                </div>


                <div class="form-floating py-2 col-12">
                    <select asp-for="warHouseId" asp-items="Model.wareHouseList" class="form-select border-0 shadow">
                        <option disabled selected>
                            --Select warehouse--
                        </option>
                    </select>
                    <label asp-for="warHouseId" class="ms-2"></label>
                    <span asp-validation-for="warHouseId" class="text-danger"></span>
                </div>


                <div class="mb-3 row p-1">
                    <label asp-for="Quantity" class="p-0"> </label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>


                
                

         
                <div class="row" pt-2>

                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Submit</button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Inventory" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>

                </div>



            </div>

        </form>

    </div>



</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


