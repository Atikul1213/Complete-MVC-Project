            <h2 class="text-primary">Inventory List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Inventory" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bookmark-plus-fill"></i>Create New Inventory
            </a>
        </div>

    </div>

    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>WareHouse</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>

