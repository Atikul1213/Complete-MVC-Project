@section Scripts {

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({

                "ajax": {
                    "url": "@Url.Action("GetAll", "Inventory")",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "product.name", "name": "Product Name" },
                    { "data": "product.price", "name": "Price" },
                    { "data": "wareHouse.name", "name": "WareHouse" },
                    { "data": "quantity", "name": "Quantity" },
                    {
                        "data": "id",
                        "render": function (data) {
                            return `<div class="w-75 btn-group" role="group">
                                     <a href="/Inventory/Edit/${data}" class="btn btn-primary"><i class="bi bi-pencil-fill"></i></a>
                                     <a href="/Inventory/Delete/${data}" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                     </div>`;
                        },
                        "orderable": false
                    }
                ]
            });
        });
    </script>
}